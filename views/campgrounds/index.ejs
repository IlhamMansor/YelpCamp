<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px"></div>

<h1>All campgrounds</h1>
<ul>
  <% for(let camp of campground) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(camp.images.length) { %>
        <img src="<%= camp.images[0].url %>" class="img-fluid" alt="" />
        <% }else { %>
        <img src="https://res.cloudinary.com/dgi9fzukm/image/upload/v1642771628/YelpCamp/mxcxemnoyixuufmydyoy.jpg" class="img-fluid" alt="" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= camp.location %></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%= camp._id %> ">View <%= camp.title %></a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campground = {features: <%-JSON.stringify(campground)%>};
</script>

<script src="/javascripts/clusterMap.js"></script>
